@model CreateSubscriberDto

<aside class="single_sidebar_widget newsletter_widget">
    <h4 class="widget_title" style="color: #2d2d2d;">Abone Bülteni</h4>
    <form asp-action="Subscribe" asp-controller="Blog">
        <div class="form-group">
            <input type="email" asp-for="Email" class="form-control"   placeholder='Email Yazınız.' required>
        </div>
        <button onclick="subscribers()" class="button rounded-0 primary-bg text-white w-100 btn_1 boxed-btn"
                type="submit">
            Abone Ol
        </button>
    </form>
</aside>

<script>

        function subscribers() {

                    Swal.fire({
      title: "Abone Olma İşlemi Başarılı",
      text: "Abone Olduğunuz için teşekkürler.",
      icon: "success",
      showCancelButton: false,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Tamam",
      cancelButtonText: "İptal"
    }).then((result) => {
      if (result.isConfirmed) {

          window.location.href = "/Blog/Index";

      }
    });

        }

</script>